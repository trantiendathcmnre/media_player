<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tiendat.myapplication.Player"
    android:id="@+id/manHinh">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/btFB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btFB"
        android:src= "@android:drawable/ic_media_rew"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageViewlaucher"
        android:layout_alignStart="@+id/imageViewlaucher" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btPlay"
        android:src= "@android:drawable/ic_media_play"
        android:layout_alignTop="@+id/btFF"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btFF"
        android:src= "@android:drawable/ic_media_ff"
        android:layout_alignTop="@+id/btNxt"
        android:layout_alignRight="@+id/imageViewlaucher"
        android:layout_alignEnd="@+id/imageViewlaucher" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btNxt"
        android:src= "@android:drawable/ic_media_next"
        android:layout_below="@+id/seekBar"
        android:layout_toRightOf="@+id/imageViewlaucher"
        android:layout_toEndOf="@+id/imageViewlaucher" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btPv"
        android:src="@android:drawable/ic_media_previous"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toLeftOf="@+id/imageViewlaucher"
        android:layout_toStartOf="@+id/imageViewlaucher" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewlaucher"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:src="@drawable/ion"
        android:adjustViewBounds="false"
        android:contextClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ten bai hat"
        android:id="@+id/textViewten"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btFB"
        android:layout_alignEnd="@+id/btFB" />

</RelativeLayout>
